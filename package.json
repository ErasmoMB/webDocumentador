{
  "name": "lbs",
  "version": "0.0.0",
  "engines": {
    "node": ">=22 <23"
  },
  "scripts": {
    "preinstall": "node scripts/check-node-version.js",
    "ng": "ng",
    "start": "ng serve",
    "start:prod": "ng serve --configuration production",
    "build": "node scripts/check-no-legacy-writes.js && node scripts/generate-env.js && ng build",
    "build:prod": "node scripts/check-no-legacy-writes.js && node scripts/generate-env.js && ng build --configuration production",
    "serve:prod": "npx serve dist/lbs -s -l 4200",
    "check:node": "node scripts/check-node-version.js",
    "watch": "ng build --watch --configuration development",
    "check:no-legacy-writes": "node scripts/check-no-legacy-writes.js",
    "test": "ng test --watch=false --browsers=ChromeHeadless",
    "test:watch": "ng test",
    "test:ci": "npm run check:hardcoded-captions && node scripts/check-no-legacy-writes.js && ng test --watch=false --browsers=ChromeHeadless",
    "check:hardcoded-captions": "node scripts/check-hardcoded-table-numbers.js",
    "e2e:open": "cypress open",
    "e2e:run": "cypress run",
    "e2e:ci": "start-server-and-test start http://localhost:4200 e2e:run",
    "generate-env": "node scripts/generate-env.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.18",
    "@angular/common": "^19.2.18",
    "@angular/compiler": "^19.2.18",
    "@angular/core": "^19.2.18",
    "@angular/forms": "^19.2.18",
    "@angular/platform-browser": "^19.2.18",
    "@angular/platform-browser-dynamic": "^19.2.18",
    "@angular/router": "^19.2.18",
    "docx": "^9.2.0",
    "dotenv": "^16.3.1",
    "file-saver": "^2.0.5",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.19",
    "@angular/cli": "^19.2.19",
    "@angular/compiler-cli": "^19.2.18",
    "@types/file-saver": "^2.0.7",
    "@types/jasmine": "~4.3.0",
    "http-server": "^14.1.1",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "serve": "^14.2.5",
    "cypress": "^13.17.0",
    "start-server-and-test": "^2.0.13",
    "typescript": "~5.8.3"
  }
}